<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Class="InnovatorAdmin.Editor.ExtendedEditor" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

  <avalonedit:TextEditor x:Name="editor" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
    <avalonedit:TextEditor.ContextMenu>
      <ContextMenu>
        <MenuItem Command="Cut" />
        <MenuItem Command="Copy" />
        <MenuItem Header="Copy...">
          <MenuItem Header="Copy ID" Click="CopyId_Click" />
        </MenuItem>
        <MenuItem Command="Paste" />
        <Separator />
        <MenuItem Header="Collapse All" Click="CollapseAll_Click" />
        <MenuItem Header="Expand All" Click="ExpandAll_Click" />
        <Separator />
        <MenuItem Header="Open With..." Click="OpenWith_Click" />
      </ContextMenu>
    </avalonedit:TextEditor.ContextMenu>
  </avalonedit:TextEditor>

</UserControl>
